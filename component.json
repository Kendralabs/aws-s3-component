{
  "title": "AWS S3",
  "description": "Integration component that can read and write to AWS S3",
  "docsUrl": "https://github.com/elasticio/amazon-s3-component",
  "credentials": {
    "fields": {
      "accessKeyId": {
        "label": "Access Key Id",
        "required": true,
        "viewClass": "TextFieldView"
      },
      "accessKeySecret": {
        "label": "Secret Access Key",
        "required": true,
        "viewClass": "TextFieldView"
      }
    }
  },
  "actions": {
    "streamToFile": {
      "title": "Write file",
      "description": "Put stream as file into S3 bucket",
      "main": "./lib/actions/streamToFile.js",
      "fields": {
        "bucketName": {
          "viewClass": "TextFieldView",
          "label": "Bucket Name",
          "placeholder": "my-fancy-bucket",
          "required": true
        }
      },
      "metadata": {
        "in": {
          "type": "object",
          "properties": {
            "filename": {
              "type": "string",
              "required": false
            }
          }
        }
      }
    },
    "readFile": {
      "title": "Read file",
      "description": "Read file from S3 bucket",
      "main": "./lib/actions/readFile.js",
      "fields": {
        "bucketName": {
          "viewClass": "TextFieldView",
          "label": "Bucket Name",
          "placeholder": "my-fancy-bucket",
          "required": true
        }
      },
      "metadata": {
        "in": {
          "type": "object",
          "properties": {
            "filename": {
              "type": "string",
              "required": true
            }
          }
        }
      }
    },
    "getAllFilesInBucket": {
      "title": "Get filenames",
      "description": "Emit individually all filenames from S3 bucket",
      "main": "./lib/actions/getAllFilesInBucket.js",
      "fields": {
        "bucketName": {
          "viewClass": "TextFieldView",
          "label": "Bucket Name",
          "placeholder": "my-fancy-bucket",
          "required": true
        }
      },
      "metadata": {
        "out": {
          "type": "object",
          "properties": {
            "filename": {
              "type": "string",
              "required": true
            }
          }
        }
      }
    },
    "deleteFile": {
      "title": "Delete file",
      "description": "Delete file from S3 bucket",
      "main": "./lib/actions/deleteObject.js",
      "fields": {
        "bucketName": {
          "viewClass": "TextFieldView",
          "label": "Bucket Name",
          "placeholder": "my-fancy-bucket",
          "required": true
        }
      },
      "metadata": {
        "in": {
          "type": "object",
          "properties": {
            "filename": {
              "type": "string",
              "required": true
            }
          }
        },
        "out": {
          "type": "object",
          "properties": {
            "filename": {
              "type": "string",
              "required": true
            }
          }
        }
      }
    }
  }
}
